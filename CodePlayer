		<script type="text/javascript">
			//change color when the mouse hover to button
			$("button").hover(function(){
				$(this).css("backgroundColor","grey")},function(){
				$(this).css("backgroundColor","white")
			});
			
			//show textarea when click on button
			$("#hTMLButton").click(function(){
				$(".text").toggle();
			});
			//$("#hTMLButton").off("click");
			
			//auto update text in output
			 
			 
			 $('textarea').on('input propertychange', function() {

      			$("iframe").contents().find("html").html($(".text").val());
				$("iframe").contents().find("html").html($(".text1").val());
			 	});
			
			
			
		</script>
		
		
		
		
